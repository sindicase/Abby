@page
@using Abby.Models;
@model AbbyWeb.Pages.Admin.Categories.EditModel


<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label> <br />
            <input asp-for="@Model.Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-bg-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label> <br />
            <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-bg-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Edit</button>
        <a asp-page="Index" class="btn btn-primary">Back to list</a>

    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>         //CLIENT SITE VALIDATION
    }
}
